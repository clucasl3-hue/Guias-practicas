function contarCaracter(texto, c) {
    let total = 0;
    for (let i = 0; i < texto.length; i++) {
        if (texto[i] === c) {
            total++;
        }
    }
    return total;
}
function contarPares(texto) {
    let total = 0;

    for (let i = 0; i < texto.length; i += 2) {
        total++;
    }
    return total;
}
function contarImpares(texto) {
    let total = 0;

    for (let i = 1; i < texto.length; i += 2) {
        total++;
    }
    return total;
}
function agregarInicio(texto, add) {
    return add + " " + texto;
}

function agregarFinal(texto, add) {
    return texto + " " + add;
}
